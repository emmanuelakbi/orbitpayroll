{
  "name": "orbitpayroll",
  "version": "0.0.1",
  "private": true,
  "description": "Web3 payroll platform for organizations",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit -w @orbitpayroll/api -w web",
    "test:integration": "npm run test -w @orbitpayroll/api",
    "test:contracts": "npm run test -w @orbitpayroll/contracts",
    "test:property": "npm run test:property -w @orbitpayroll/api -w web",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:ci": "npm run test:ci:contracts && npm run test:ci:api && npm run test:ci:web && npm run test:ci:database",
    "test:ci:api": "npm run test:coverage -w @orbitpayroll/api",
    "test:ci:web": "npm run test:coverage -w web",
    "test:ci:contracts": "npm run test:coverage -w @orbitpayroll/contracts",
    "test:ci:database": "npm run test -w @orbitpayroll/database",
    "clean": "rm -rf node_modules && npm run clean --workspaces --if-present",
    "docker:up": "docker-compose up -d postgres",
    "docker:up:all": "docker-compose --profile with-redis up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d postgres",
    "docker:logs": "docker-compose logs -f",
    "demo:seed": "npm run db:seed:demo -w @orbitpayroll/database",
    "demo:reset": "npm run db:migrate:deploy -w @orbitpayroll/database && npm run db:seed:demo -w @orbitpayroll/database",
    "demo:setup": "./scripts/setup-demo.sh seed",
    "demo:verify": "./scripts/setup-demo.sh verify",
    "demo:status": "./scripts/setup-demo.sh status",
    "test:e2e": "./scripts/test-harness.sh",
    "lighthouse": "npm run lighthouse -w web",
    "postinstall": "./scripts/patch-walletconnect-logger.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "zod": "3.22.4"
  }
}

# =============================================================================
# OrbitPayroll - Root Environment Configuration
# =============================================================================
# This file documents all environment variables used across the monorepo.
# Copy this file to .env and fill in the values for your environment.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development                    # development | staging | production

# -----------------------------------------------------------------------------
# Ethereum Network Configuration
# -----------------------------------------------------------------------------
# RPC URLs for blockchain access (Alchemy or Infura recommended)
RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Chain ID (1 = mainnet, 11155111 = sepolia)
CHAIN_ID=11155111

# -----------------------------------------------------------------------------
# Smart Contract Addresses
# -----------------------------------------------------------------------------
# MNEE Token Contract (ERC20)
MNEE_TOKEN_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFB6cF

# PayrollTreasury Contract (deployed per organization)
# TREASURY_ADDRESS=0x...

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/orbitpayroll?schema=public

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# JWT secret for signing tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-256-bit-secret-key-here

# JWT token expiration
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=3001
API_HOST=localhost
API_BASE_URL=http://localhost:3001

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_MNEE_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFB6cF

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WC_PROJECT_ID=your-walletconnect-project-id

# -----------------------------------------------------------------------------
# Optional: Redis (for caching and rate limiting)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Optional: Logging & Monitoring
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# SENTRY_DSN=https://your-sentry-dsn

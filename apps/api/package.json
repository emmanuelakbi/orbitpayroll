{
  "name": "@orbitpayroll/api",
  "version": "0.0.1",
  "private": true,
  "description": "OrbitPayroll Backend API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@orbitpayroll/config": "*",
    "@orbitpayroll/database": "*",
    "@orbitpayroll/types": "*",
    "@sendgrid/mail": "^8.1.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.16.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "siwe": "^2.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/sendgrid": "^2.0.31",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fast-check": "^3.22.0",
    "pino-pretty": "^11.2.0",
    "prettier": "^3.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
